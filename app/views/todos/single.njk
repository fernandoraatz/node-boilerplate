{% extends '../base/layout.njk' %}
{% block content %}

    <div class="page-title">
        <h1>Todo</h1>
    </div> 
  
    <section class="page-content"> 

        <article class="card">
            <div class="card-header" style="background: url('../images/{{todo.image }}')">
                <h2>{{ todo.title }}</h2>
            </div>
            <div class="card-content">
                <span class="card-title "></span>
                <p>{{todo.description }}</p>
            </div>
            <div class="card-action">
            <a class="btn-primary" href="/todos/update/{{ todo._id }}">Editar</a> 
            <a class="btn-danger btn-delete" data-id="{{ todo._id }}">Deletar</a> 
          </div> 
        </article> 
    
    </section> 
{% endblock %}
 

