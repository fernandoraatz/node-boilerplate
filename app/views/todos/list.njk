{% extends '../base/layout.njk' %}

{% block content %}

    <div class="page-title">
        <h1>Todos</h1>
    </div> 
 
    <section class="page-content"> 
    {% for todo in todos %}
        <article class="card">
            <div class="card-header" style="background-image: url('images/{{todo.image }}')"> 
                <h2>{{ todo.title }} - {{todo.isChecked }}</h2> 
            </div>
            <div class="card-content">
                <span class="card-title "></span>
                <p>{{todo.description }}</p>
            </div>
            <div class="card-action">
               <a class="btn-primary" href="/todo/{{ todo._id }}">Ver Mais</a> 
            </div>
        </article>
    {% endfor %} 
    
    </section> 
{% endblock %}
 

